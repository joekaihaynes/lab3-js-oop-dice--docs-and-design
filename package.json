{
  "name": "lab3-js-oop-dice-docs-and-design",
  "version": "0.3.0",
  "description": "A dice simulation demonstrating JS OOP, dependency injection, and quality practices",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "node --test test/**/*.test.js",
    "test:watch": "node --test --watch test/**/*.test.js",
    "lint": "eslint src/**/*.js test/**/*.js",
    "lint:fix": "eslint src/**/*.js test/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"test/**/*.js\"",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "npx http-server ./docs/generated -p 8080",
    "quality": "node check-quality.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joekaihaynes/lab3-js-oop-dice--docs-and-design.git"
  },
  "keywords": [
    "dice",
    "simulation",
    "oop",
    "javascript",
    "testing",
    "documentation"
  ],
  "author": "Joe Haynes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joekaihaynes/lab3-js-oop-dice--docs-and-design/issues"
  },
  "homepage": "https://github.com/joekaihaynes/lab3-js-oop-dice--docs-and-design#readme",
  "devDependencies": {
    "eslint": "^9.35.0",
    "jsdoc": "^4.0.4",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
